#!/bin/withenv sh

set -euo pipefail


#======================================================================================================================
# Run preflight checks
#======================================================================================================================

nu -c "use bf-freescout run ; run preflight"


#======================================================================================================================
# Run task scheduler as a service.
# This is because on Alpine the scheduler doesn't work correctly when run through the cron.
#======================================================================================================================

SRC=$(bf-env FS_SRC)
php ${SRC}/artisan schedule:run
