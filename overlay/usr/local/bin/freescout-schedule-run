#!/usr/bin/with-contenv bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Run scheduled tasks.
#======================================================================================================================

php ${FREESCOUT_SRC}/artisan freescout:fetch-monitor
php ${FREESCOUT_SRC}/artisan freescout:check-conv-viewers
php ${FREESCOUT_SRC}/artisan freescout:fetch-emails >> /data/storage/logs/fetch-emails.log
freescout-set-permissions > /dev/null 2>&1

php ${FREESCOUT_SRC}/artisan schedule:run >> /dev/null 2>&1
